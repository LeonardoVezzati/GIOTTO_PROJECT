


<div class="navbar-giotto">
  <div class='flex1'>
    <ul class='list-inline-left'>
     <% if current_user == nil %>
     <li class='text-list-dashboard'> <%= link_to 'Login', teams_path %></li>
       <% elsif current_user.status == "manager" %>
      <li class='text-list-dashboard'> <%= link_to 'Dashboard', teams_path %></li>

        <% else %>
      <li class='text-list-dashboard'> <%= link_to 'Dashboard', packages_path %></li>

      <% end %>
      <li class='text-list-left'>About us</li>
    </ul>
  </div>
  <div class='flex1'>
    <div class='logo-container'>
      <%= link_to root_path do %> <%=image_tag 'logo.png'%> <% end %>
    </div>
  </div>
  <div class='flex1'>
    <ul class='list-inline-right'>
      <li class="nav-item dropdown">
        <li class="text-list-right dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user-cog"></i></li>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Account", edit_user_registration_path, class: "dropdown-item" %>
          <% if current_user == nil %>
            <%= link_to "Login", new_user_session_path, class: "dropdown-item" %>
          <% else %>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        <% end %>
        </div>
      </li>
    </ul>
  </div>
</div>
