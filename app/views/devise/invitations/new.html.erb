<div class= "row row-container">
  <%= render 'shared/lateral_menu' %>
  <div class= "index-list ">
    <div style= "margin-top: 40px">
      <%= link_to "Return to dashboard", teams_path, class: 'btn btn-delivery'%>
    </div>
    <div class="container">
      <div class="form-wrapper-new-delivery">

        <h2 class= "form-delivery-title">Invite a new user</h2>
        <%= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>

          <% resource.class.invite_key_fields.each do |field| -%>
            <div class="form-inputs">
              <%= f.input :firstname, label: 'First Name', placeholder: 'First Name' %>
              <%= f.input :lastname, label: 'Last Name', placeholder: 'Last Name' %>
              <%= f.input :email, placeholder: 'user@domain.com' %>
              <%= f.input :budget_per_month, placeholder: '/month'  %>
              <%= f.input :team_id, as: :hidden, input_html: {value: params[:team_id]} %>

            </div>
                 <%=f.submit "Send invite", class: "btn btn-create" %>

          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
