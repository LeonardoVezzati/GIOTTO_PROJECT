<%= render 'shared/lateral_menu' %>
<div class='index-list'>
  <div class='card-show'>
    <div class= col-6>
    <ul class= "product-show-list">
      <li><%= @furniture.name %></li>
      <li><%= @furniture.price %></li>
      <li>from <%= @furniture.price%>/month</li>
      <li><%= @furniture.description %></li>
      <li><%= @furniture.category %></li>
        <%= simple_form_for @package do |f| %>
        <%= f.input :furniture_id, as: :hidden, input_html: { value: params[:id] } %>
        <%= f.input :number %>
        <%= f.submit %>
      <% end %>
    </ul>
    </div>
    <div class= col-6>
    <div style= "background-color: #FFFBF5">
    <div class="product-show-image">
      <%= cl_image_tag @furniture.photo, width: 400, height: 400, crop: :fit %>
    </div>
    </div>
   </div>
  </div>
</div>