 <body>
  <div class= "row row-container">


<%= render 'shared/lateral_menu' %>
    <div class= "index-list ">

      <div class="flex-item ">


       <div class="flex-row d-flex justify-content-around">
        <div class="card card-index-info align-items-center " >
          <div class="card-body top-card ">
            <p>Tot / month:</p>
            <% @total = 0 %>
            <% @packages.each do |package| %>
            <% @total += package.furniture.price / 5  %>
            <% end %>
            <h2 class="furniture-title item-product index-title ">
              <%= @total %>
            </h2>
          </div>
        </div>

        <div class="card card-index-info align-items-center ">
          <div class="card-body top-card">
            <p>Available budget:</p>
            <% @total = 0 %>
            <% @packages.each do |package| %>
            <% @total += package.furniture.price / 5  %>
            <% end %>
            <h2 class="furniture-title item-product index-title">
              <%= @total %>
            </h2>
          </div>
        </div>

        <div class="card card-index-info align-items-center" >
          <div class="card-body top-card">
            <p>Rental lemght:</p>
            <% @total = 0 %>
            <% @packages.each do |package| %>
            <% @total += package.furniture.price / 5  %>
            <% end %>
            <h2 class="furniture-title item-product index-title">
              <%= @total %>
            </h2>
          </div>
        </div>
      </div>

      <div class="package_title">
        <h3>Your package:</h3>
        <div class="separator"></div>
      </div>


       <div class="package_title flex-row d-flex justify-content-between align-items-center">
        <h3>Your 1st package</h3>
        <%= link_to "Plan my delivery", new_booking_path, class: 'btn btn-primary btn-delivery' %>
      </div>


  <div class="flex-row d-flex justify-content-around">

  <% @packages.each do |package| %>

    <div class="card item-card card-item" style="max-width: 17rem;">
      <img class="card-img-top" src="https://source.unsplash.com/1600x900/?furniture,desk
    " alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"><%= package.booking.status %></h5>
        <h5 class="card-title"><%= package.furniture.name %></h5>
        <p class="card-text"><%= package.furniture.retail_price %>$</p>
        <p class="card-text">Delivery date <%= package.furniture.price %>$</p>
        <p class="card-text">Expiry date <%= package.furniture.price / 5 %>$</p>
        <p class="card-text">Rental plan <%= package.furniture.price %>$</p>
        <p class="card-text">Rental / month <%= package.furniture.price / 5 %>$</p>
        <div class="delete-button">
          <%= link_to "x",
                      package_path(package),
                      method: :delete,
                      data: { confirm: "Are you sure ?" } %>
        </div>
      </div>
    </div>
  <% end %>

    <div class="card item-card card-item" style="max-width: 17rem;">

      <div class="card-body">
        <div class="">
          <%= link_to "+", furnitures_path %>
        </div>
      </div>
    </div>

  </div>
</div>

<div class="separator"></div>


    </div>


  </div>

 </body>

