 <body>
  <div class= "row row-container">


<%= render 'shared/lateral_menu' %>
    <div class= "index-list ">

      <div class="flex-item ">


       <div class="flex-row d-flex justify-content-around">
        <div class="card card-index-info align-items-center " >
          <div class="card-body top-card ">
            <p>Tot / month:</p>
            <% @total = 0 %>
            <% @packages.each do |package| %>
            <% @total += package.furniture.price / 5  %>
            <% end %>
            <h2 class="furniture-title item-product index-title ">
              <%= @total %>
            </h2>
          </div>
        </div>

        <div class="card card-index-info align-items-center ">
          <div class="card-body top-card">
            <p>Available budget:</p>
            <% @total = 0 %>
            <% @packages.each do |package| %>
            <% @total += package.furniture.price / 5  %>
            <% end %>
            <h2 class="furniture-title item-product index-title">
              <%= @total %>
            </h2>
          </div>
        </div>

        <div class="card card-index-info align-items-center" >
          <div class="card-body top-card">
            <p>Rental lemght:</p>
            <% @total = 0 %>
            <% @packages.each do |package| %>
            <% @total += package.furniture.price / 5  %>
            <% end %>
            <h2 class="furniture-title item-product index-title">
              <%= @total %>
            </h2>
          </div>
        </div>
      </div>

      <div class="package_title">
        <h3>Your package:</h3>
        <div class="separator"></div>
      </div>


       <div class="package_title flex-row d-flex justify-content-between align-items-center">
        <h3>Your 1st package</h3>
        <%= link_to "Plan my delivery", new_booking_path, class: 'btn btn-primary btn-delivery' %>
      </div>

  <div class="flex-row d-flex justify-content-around">

  <% @packages.each do |package| %>
    <div class="card item-card card-item packages-card" style="max-width: 14rem;">
    <div class="card-img-top"> <%= cl_image_tag package.furniture.photo, width: 100, height: 266, crop: :fit %> </div>

      <div class="card-body">
        <h5 class="card-title card-status">
          <% if package.booking == nil  %>
            <span class="pending"> <h2>Pending</h2> </span>
            <% else %>
          <%= package.booking.status.capitalize %>
          <% end %>
          </h5>
        <h5 class="card-title card-name-furniture"><%= package.furniture.name %></h5>
        <% @divide = 0 %>
        <% if current_user.team.rental_period == 1 %>
             <% @divide = 0.20 %>
              <% elsif current_user.team.rental_period == 2 %>
                <% @divide = 0.125 %>
              <% elsif current_user.team.rental_period == 3 %>
                <% @divide = 0.0933 %>
              <% elsif current_user.team.rental_period == 4 %>
                <% @divide = 0.0775 %>
              <% elsif current_user.team.rental_period == 5 %>
                <% @divide = 0.068 %>
              <% elsif current_user.team.rental_period == 6 %>
                <% @divide = 0.06 %>
              <% elsif current_user.team.rental_period == 7 %>
                <% @divide = 0.0543 %>
              <% elsif current_user.team.rental_period == 8 %>
                <% @divide = 0.0513 %>
              <% elsif current_user.team.rental_period == 9 %>
                <% @divide = 0.0489 %>
              <% elsif current_user.team.rental_period == 10 %>
                <% @divide = 0.047 %>
              <% elsif current_user.team.rental_period == 11 %>
                <% @divide = 0.0445 %>
              <% else %>
                <% @divide = 0.0417 %>
             <% end %>
        <p class="card-text card-price"><%= package.furniture.price * @divide %>$ / month</p>
        <p class="card-text">Delivery date: <span class="pending">pending</span>  </p>
        <p class="card-text">Expiry date: <span class="pending">pending</span> </p>
        <p class="card-text">Rental plan: <%= @current_user.team.rental_period %>months</p>
        <div class="delete-button">
          <%= link_to "x",
                      package_path(package),
                      method: :delete,
                      data: { confirm: "Are you sure ?" } %>
        </div>
      </div>
    </div>
  <% end %>

    <div class="card item-card card-item" style="max-width: 14rem; min-width: 13rem;">

      <div class="card-body">
        <div class="add-item">
          <%= link_to "Add an item", furnitures_path %>
        </div>
      </div>
    </div>

  </div>
</div>

<div class="separator"></div>


    </div>


  </div>

 </body>

