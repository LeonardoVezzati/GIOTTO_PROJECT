
<div class= "row row-container">
  <%= render 'shared/lateral_menu' %>
  <div class= "index-list ">


    <div class="row">

        <div class="col-3">
          <% if current_user.status == "manager" %>
            <div class="top-box-packages align-items-center" >
              <div class="top-box-info-packages">
                <p>Rental period:</p>
                <h2><%= current_user.team.rental_period %>  months</h2>
              </div>
            </div>
          <% end %>
        </div>

        <div class="col-3">
          <div class="top-box-packages align-items-center">
            <div class="top-box-info-packages">
              <p>Items to deliver:</p>
              <h2><%= @total_items %></h2>
            </div>
          </div>
        </div>

        <div class="col-3">
          <div class="top-box-packages align-items-center" >
            <div class="top-box-info-packages">
              <p>Check your package:</p>
              <%= link_to "My package", packages_path(user: current_user), class: 'check-your-package-button' %>
            </div>
          </div>
        </div>

        <div class="col-3">
          <div class="top-box-packages-rental align-items-center" >
            <div class="top-box-info-packages">
              <p class= "text-box-delivery">Your delivery and istallation are for free</p>
            </div>
          </div>
        </div>

      </div>
      
      <div class="package_title flex-row d-flex justify-content-between align-items-center">
        <h3>Your deliveries list:</h3>
        <%= link_to "Plan your delivery", new_booking_path, class: 'btn btn-primary btn-delivery' %>
      </div>

      <% @bookings.each do |booking| %>
        <div class=delivery-card>
          <div class= "row">
            <div class= col-5>
            <div class="image-background">
              <div class='delivery-image'>
              </div>
            </div>
            </div>
            <div class= "col-7 delivery-info-card">
              <p class="next-delivery-text">Your next delivery:</p>
              <div>
                <h2 class="pending"><%= booking.status.capitalize %></h2>
              </div>
              <div>
                <p class= "delivery-date">Your delivery date:</p>
                <h2><%= booking.delivery_date&.strftime('%A %e %B %Y') %></h2>
              </div>
              <div>
                <p class= "delivery-date">We will deliver at about:</h2>
                  <h2><%= booking.delivery_time&.strftime("%H:%M") %></h2>
              </div>
              <%= link_to "Update", edit_booking_path(booking), class: "btn btn-create btn-create:hover" %>
              <%= link_to "Delete", booking_path(booking), method: :delete, class: "btn btn-create btn-create:hover" %>
            </div>
          </div>
        </div>
      <% end %>


  </div>
</div>


