<div class= "row row-container">
  <%= render 'shared/lateral_menu' %>
  <div class= "index-list ">
    <div style= "margin-top: 40px">
      <%= link_to "Return to deliveries", bookings_path, class: 'btn btn-delivery'%>
    </div>
    <div class="container">
      <div class="form-wrapper-new-delivery">

        <h2 class= "form-delivery-title">Your're only a few steps away from your dream office!</h2>

        <%=simple_form_for [@booking] do |f|%>
          <%= f.input :delivery_date, as: :string, required: false, input_html: {class: "datepicker"} %>
          <%= f.input :delivery_time, as: :string, required: false, input_html: {class: "time"} %>
          <div id="booking-dates" data-dates="<%=Booking.all.map{|booking|"#{booking.delivery_date&.strftime("%d-%m-%Y")} #{booking.delivery_time&.strftime("%H:%M")}"}.compact.to_json%>"></div>
          <%= f.input :delivery_address %>
          <%= f.input :floor %>
          <%= f.input :building_elevator %>
          <%= f.input :external_elevator, label: "External elevator (An additional fee of 75â‚¬ incurs)."%>
          <%=f.submit "Confirm", class: "btn btn-create" %>
      <%end %>
      </div>
    </div>
  </div>
</div>
